<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/perfilbg"
    android:id="@+id/profile"
    tools:context=".Profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="313dp"
            android:layout_marginBottom="612dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="106dp"
            android:layout_marginTop="79dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="628dp"
            android:hint="Nome"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/perfilTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="99dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="239dp"
            android:layout_marginBottom="652dp"
            android:text="Perfil"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/marca"
            android:layout_width="110dp"
            android:layout_height="92dp"
            android:layout_marginStart="285dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="610dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/marca" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:layout_gravity="center"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp"
                android:background="@drawable/costum_edittext">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:padding="24dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/pets"
                        android:text="Pets"
                        android:textSize="18sp"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="@color/dark_blue"
                        app:cornerRadius = "20dp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/button_agendamentos"
                        android:text="Agendamentos"
                        android:textSize="18sp"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="@color/dark_blue"
                        app:cornerRadius = "20dp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <!--<Button

            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="299dp"
            android:layout_marginTop="572dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="89dp"
            android:backgroundTint="@color/dark_blue"
            android:text="+"
            android:textSize="38dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" /> -->


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonToRegister"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginStart="323dp"
            android:layout_marginTop="555dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="120dp"
            android:backgroundTint="@color/dark_blue"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_add_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
