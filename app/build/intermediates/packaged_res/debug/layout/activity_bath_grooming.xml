<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BathGrooming"
    android:background="@drawable/fundoservices">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="313dp"
        android:layout_marginBottom="612dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/comb_icon" />

    <TextView
        android:id="@+id/bathGrooming"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="239dp"
        android:layout_marginBottom="652dp"
        android:text="Banho e Tosa"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/costum_edittext">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agendamento"
                android:id="@+id/agendamento"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"/>



            <AutoCompleteTextView
                android:id="@+id/petChoice"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="@string/escolhaPet"
                android:background="@drawable/costum_edittext"
                android:paddingLeft="17dp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:inputType="none"/>



            <AutoCompleteTextView
                android:id="@+id/serviceType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="@string/tipoServico"
                android:background="@drawable/costum_edittext"
                android:paddingLeft="17dp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:inputType="none"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/agendaBanhoTosa"
                android:background="@drawable/costum_edittext"
                android:paddingLeft="17dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"
                android:hint="Selecione o Dia"
                android:inputType="none"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/agendarServico"
                android:text="Agendar"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/dark_blue"
                app:cornerRadius = "20dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>
