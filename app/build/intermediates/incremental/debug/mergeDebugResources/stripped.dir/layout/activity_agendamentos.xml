<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetProfile"
    android:background="@drawable/fundopets">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/costum_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agendado"
                android:id="@+id/petTitle"
                android:textSize="26sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"/>

            <AutoCompleteTextView
                android:id="@+id/petNome"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="Nome do Pet"
                android:background="@drawable/costum_edittext"
                android:paddingLeft="17dp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:text="Tobias" />
            <AutoCompleteTextView
                android:id="@+id/petTipo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="@string/tipoPet"
                android:background="@drawable/costum_edittext"
                android:paddingLeft="17dp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:text="Gato"/>
            <AutoCompleteTextView
                android:id="@+id/servico"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="Servico"
                android:background="@drawable/costum_edittext"
                android:paddingLeft="17dp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:text="Vacinação"/>
            <AutoCompleteTextView
                android:id="@+id/vacina1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="Servico"
                android:background="@drawable/costum_edittext"
                android:paddingLeft="17dp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:text="Vacina Tipo 1"/>
            <AutoCompleteTextView
                android:id="@+id/petData"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="Data"
                android:background="@drawable/costum_edittext"
                android:paddingLeft="17dp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:text="26/12/2023"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    

</LinearLayout>