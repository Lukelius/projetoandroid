<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Products"
    android:background="@drawable/fundo">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="140dp">



  <androidx.cardview.widget.CardView

      android:id="@+id/containerImg"
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:cardBackgroundColor="@color/blue"
      android:layout_margin="20dp"
      app:cardCornerRadius="15dp"
      app:cardElevation="8dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/racao"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        />
  </androidx.cardview.widget.CardView>


  <TextView
      android:id="@+id/nome"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Ração"
      android:textSize="26sp"
      android:textColor="@color/blue"
      app:layout_constraintStart_toEndOf="@id/containerImg"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_margin="20dp"
      />

  <TextView
      android:id="@+id/descricao"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="140dp"
      android:layout_marginEnd="10dp"
      android:layout_marginVertical="20dp"
      android:text="Ração Pedigree para cachorros de porte pequeno"
      android:textSize="14sp"
      android:textColor="@color/black"
      app:layout_constraintStart_toEndOf="@id/containerImg"
      app:layout_constraintTop_toBottomOf="@id/nome"
      app:layout_constraintEnd_toEndOf="parent"
      />

  <TextView
      android:id="@+id/preco"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="R$50,00"
      android:textSize="18sp"
      android:textColor="@color/blue"
      app:layout_constraintStart_toEndOf="@id/containerImg"
      app:layout_constraintTop_toBottomOf="@id/descricao"
      android:layout_margin="20dp"
      />

  <View
      android:id="@+id/view"
      android:layout_width="match_parent"
      android:layout_height="3dp"
      android:background="@color/blue"
      android:layout_margin="20dp"
      app:layout_constraintTop_toBottomOf="@id/preco"
      app:layout_constraintEnd_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />

  <androidx.cardview.widget.CardView
      android:id="@+id/containerImg2"
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:layout_constraintTop_toTopOf="@id/view"
      app:layout_constraintStart_toStartOf="parent"
      app:cardBackgroundColor="@color/blue"
      android:layout_margin="20dp"
      app:cardCornerRadius="15dp"
      app:cardElevation="8dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/racao"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        />
  </androidx.cardview.widget.CardView>


  <TextView
      android:id="@+id/nome2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Ração"
      android:textSize="26sp"
      android:textColor="@color/blue"
      app:layout_constraintStart_toEndOf="@id/containerImg"
      app:layout_constraintTop_toTopOf="@id/view"
      android:layout_margin="20dp"
      />

  <TextView
      android:id="@+id/descricao2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="140dp"
      android:layout_marginEnd="10dp"
      android:layout_marginVertical="20dp"
      android:text="Ração Pedigree para cachorros de porte médio"
      android:textSize="14sp"
      android:textColor="@color/black"
      app:layout_constraintStart_toEndOf="@id/containerImg"
      app:layout_constraintTop_toBottomOf="@id/nome2"
      app:layout_constraintEnd_toEndOf="parent"
      />

  <TextView
      android:id="@+id/preco2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="R$75,00"
      android:textSize="18sp"
      android:textColor="@color/blue"
      app:layout_constraintStart_toEndOf="@id/containerImg"
      app:layout_constraintTop_toBottomOf="@id/descricao2"
      android:layout_margin="20dp"
      />

  <View
      android:id="@+id/view2"
      android:layout_width="match_parent"
      android:layout_height="3dp"
      android:background="@color/blue"
      android:layout_margin="20dp"
      app:layout_constraintTop_toBottomOf="@id/preco2"
      app:layout_constraintEnd_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />

  <androidx.cardview.widget.CardView
      android:id="@+id/containerImg3"
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:layout_constraintTop_toTopOf="@id/view2"
      app:layout_constraintStart_toStartOf="parent"
      app:cardBackgroundColor="@color/blue"
      android:layout_margin="20dp"
      app:cardCornerRadius="15dp"
      app:cardElevation="8dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/racao"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        />
  </androidx.cardview.widget.CardView>


  <TextView
      android:id="@+id/nome3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Ração"
      android:textSize="26sp"
      android:textColor="@color/blue"
      app:layout_constraintStart_toEndOf="@id/containerImg"
      app:layout_constraintTop_toTopOf="@id/view2"
      android:layout_margin="20dp"
      />

  <TextView
      android:id="@+id/descricao3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="140dp"
      android:layout_marginEnd="10dp"
      android:layout_marginVertical="20dp"
      android:text="Ração Pedigree para cachorros de porte grande"
      android:textSize="14sp"
      android:textColor="@color/black"
      app:layout_constraintStart_toEndOf="@id/containerImg"
      app:layout_constraintTop_toBottomOf="@id/nome3"
      app:layout_constraintEnd_toEndOf="parent"
      />

  <TextView
      android:id="@+id/preco3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="R$100,00"
      android:textSize="18sp"
      android:textColor="@color/blue"
      app:layout_constraintStart_toEndOf="@id/containerImg"
      app:layout_constraintTop_toBottomOf="@id/descricao3"
      android:layout_margin="20dp"
      />

  <View
      android:id="@+id/view3"
      android:layout_width="match_parent"
      android:layout_height="3dp"
      android:background="@color/blue"
      android:layout_margin="20dp"
      app:layout_constraintTop_toBottomOf="@id/preco3"
      app:layout_constraintEnd_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />



</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>